<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boostops.unity.revenue">

    <!-- Google Play Billing permission -->
    <uses-permission android:name="com.android.vending.BILLING" />
    
    <!-- Internet permission for BoostOps API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Network state permission for connectivity checks -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- AD_ID permission for Android API 33+ advertising attribution -->
    <!-- Required for advertising attribution on Android 13+ -->
    <!-- Apps targeting children should remove this permission -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application>
        <!-- No specific activities needed - this integrates with Unity's main activity -->
    </application>

</manifest> 